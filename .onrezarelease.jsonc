{
  "$schema": "node_modules/onreza-release/schema.json",
  "projectType": "rust",
  "git": {
    "commitMessage": "chore(release): v{{version}} [skip ci]",
    "tagMessage": "Release v{{version}}",
    "push": true,
    "skipHooks": true,
    "beforeCommit": "cargo generate-lockfile && git add Cargo.lock"
  },
  "changelog": {
    "types": {
      "feat": "âœ¨ Features",
      "fix": "ğŸ› Bug Fixes",
      "perf": "âš¡ Performance",
      "docs": "ğŸ“š Documentation",
      "refactor": "â™»ï¸ Changed",
      "style": "ğŸ¨ Changed",
      "chore": "ğŸ”§ Changed",
      "ci": "ğŸ‘· CI/CD",
      "test": "âœ… Testing"
    },
    "showHash": true,
    "showAuthor": false
  },
  "versioning": {
    "tagPrefix": "v",
    "preMajorMode": "auto"
  },
  "release": {
    "enabled": true,
    "platform": "github",
    "checkExisting": true
  },
  "binaries": {
    "enabled": true,
    "name": "nrz",
    "distDir": "./dist",
    "inputFormat": "tar.gz",
    "platforms": ["linux-x64", "darwin-x64", "darwin-arm64", "win32-x64"],
    "retryAttempts": 3,
    "npm": {
      "generateScripts": true,
      "updatePackageJson": true,
      "stripForPublish": true,
      "addTarDependency": true,
      "description": "ONREZA platform CLI â€” dev, build, deploy",
      "readme": "npm-README.md"
    }
  },
  "commitlint": {
    "output": "commitlint.config.js",
    "format": "js",
    "scopes": ["cli", "dev", "build", "deploy", "emulator", "kv", "db", "deps", "ci", "release", "tests"]
  }
}
